{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backendSWE && python -m pip3 install --upgrade pip3 && python -m pip3 install -r requirements.txt",
    "nixpacksPlan": {
      "providers": [
        "...",
        "python"
      ]
    }
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "cd backendSWE && flask run",
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
